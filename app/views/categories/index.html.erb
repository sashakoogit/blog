<h1>Listing categories</h1>
<%= link_to 'New category', new_category_path, class: "btn btn-md btn-warning" %>
<table class="table table-striped">
  <tr>
    <th>Name</th>

  </tr>
 
  <% @categories.each do |category| %>
    <tr>
      <td><%= category.name %></td>
      <td><%= link_to 'Edit', edit_category_path(category), class: "btn btn-xs btn-default" %> |
      <%= link_to 'Delete', category_path(category), class: "btn btn-xs btn-default", method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
</table>
<%= link_to 'Back', new_article_path, class: "btn btn-sm btn-default" %>




