<h1>Listing articles</h1>
 <%= link_to 'New article', new_article_path %>
<table>
<table>
  <tr>
    <th>Title</th>
    <th>Text</th>
    <th colspan="2"></th>
  </tr>
 
  <% @articles.each do |article| %>
    <tr>
      <td><%= article.title %></td>
      <td><%= article.text %></td>
      <td><%= link_to 'Show', article_path(article), class: "btn btn-primary" %></td>
      <td><%= link_to 'Edit', edit_article_path(article), class: "btn btn-primary" %></td>
    <td><%= link_to 'Destroy', article_path(article), class: "btn btn-primary", 
              method: :delete,
              data: { confirm: 'Are you sure?' } %></td>
    </tr>
    </tr>
  <% end %>
</table>
</table>



